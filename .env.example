# ===========================================
# EduTech Platform - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Or add these in Replit's Secrets tab

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,.replit.dev,.repl.co

# ===========================================
# DATABASE (Optional - SQLite is default)
# ===========================================
# Uncomment ONE option to use PostgreSQL:

# Option 1: Single URL (Recommended)
# DATABASE_URL=postgresql://username:password@host:5432/dbname

# Option 2: Individual settings
# POSTGRES_DB=edutech
# POSTGRES_USER=your_username
# POSTGRES_PASSWORD=your_password
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# ===========================================
# OPENAI API
# ===========================================
OPENAI_API_KEY=your-openai-api-key

# ===========================================
# EMAIL (Gmail SMTP)
# ===========================================
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===========================================
# GOOGLE OAUTH (Social Login)
# ===========================================
# Setup: https://console.cloud.google.com/
# → APIs & Services → Credentials → Create OAuth 2.0 Client ID
# Redirect URI: https://your-domain/accounts/google/login/callback/

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# FACEBOOK OAUTH (Social Login)
# ===========================================
# Setup: https://developers.facebook.com/
# → Create App → Facebook Login → Settings
# Redirect URI: https://your-domain/accounts/facebook/login/callback/

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ===========================================
# PAYFAST PAYMENT GATEWAY
# ===========================================
PAYFAST_MERCHANT_ID=your-merchant-id
PAYFAST_MERCHANT_KEY=your-merchant-key
PAYFAST_PASSPHRASE=your-passphrase
PAYFAST_URL=https://sandbox.payfast.co.za/eng/process

# ===========================================
# SITE SETTINGS
# ===========================================
SITE_URL=https://your-replit-url.replit.dev
